#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    double MealCost;
    int TipPer;
    int TaxPer;
    int TotalCost;
    cin>> MealCost;
    cin>>TipPer;
    cin>> TaxPer;
    double Tip =MealCost*TipPer/100;
    double Tax=MealCost*TaxPer/100;
 TotalCost =(int)round(MealCost+Tip+Tax);
    
    cout<<"The total meal cost is "<<TotalCost<" dollars.";
    return 0;
}
